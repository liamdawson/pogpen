{
    "version": "0.1.0",
    "command": "cargo",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "cargo build",
            "args": [
                "build"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "cargo run",
            "args": [
                "run",
                "--",
                "render",
                "test_data/context.yml",
                "test_data/content.md",
                "test_data/output.html"
            ]
        },
        {
            "taskName": "cargo test",
            "args": [
                "test"
            ],
            "isTestCommand": true
        }
    ]
}